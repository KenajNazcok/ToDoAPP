@model ToDoApp.Models.ToDoItem

<h2>Edytuj zadanie</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Tytul"></label>
        <input asp-for="Tytul" class="form-control" />
        <span asp-validation-for="Tytul" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <textarea asp-for="Opis" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" asp-items="@(ViewData["StatusList"] as IEnumerable<SelectListItem>)" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Kategoria"></label>
        <select asp-for="Kategoria" asp-items="@(ViewData["KategoriaList"] as IEnumerable<SelectListItem>)" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Zapisz</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
